<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="styles.css" type="text/css"/>
    <!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="/js/deleteCats.js" defer type="module"></script>
    <title>Tables</title>
  </head>
  <body>
    <%-include("./partials/navbar.ejs")%>
    <div class="container deleteContainer">
      <div class="row"><% kittens.forEach(kitten =>{ %>
        <div class="col-sm-12 col-md-6 col-lg-4" id="<%=kitten.id%>">
          <div class="card">
            <img
              class="card-img-top"
              src="<%=kitten.URL%>"
              alt="Card image cap"
            />
            <div class="card-body">
              <h5 class="card-title"><%=kitten.Name %></h5>
              <p class="card-text"><%= kitten.Desc%></p>
              <p class="card-text">
                
                <%if(typeof user !== 'undefined' && user.Role === 'admin'){%>
                  <p><%=kitten.id%></p>
                  <button data-id="<%=kitten.id%>" data-name="<%=kitten.Name %>" class="btn btn-danger deleteCatBtn">Delete</button>
                  <% }%>
                <small class="text-muted">Bildet ble lastet opp<%=kitten.Dato%></small>
              </p>
            </div>
          </div>
        </div>
    <% })%></div>
    </div>
    
  </body>
</html>
